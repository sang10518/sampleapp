    <style name="btnFloating">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">20dp</item>
        <item name="android:minHeight">@dimen/floating_btn_height_min</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnDark">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/round_rect_black_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnLight">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/round_rect_white_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnCircle">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
        <item name="android:height">100dp</item>
        <item name="android:width">100dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gridRect">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/round_rect_white_5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PopupWindowCustom">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="ScreenTransAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_to_left</item>
    </style>

    <dimen name="floating_btn_height_min">64dp</dimen>
</resources>
