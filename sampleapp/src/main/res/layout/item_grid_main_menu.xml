<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:id="@+id/clGridMainMenu"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMainMenuIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMainMenuTitle"
        tools:src="@drawable/ic_pandemic_info"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tvMainMenuTitle"
        android:gravity="center|top"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMainMenuIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Test"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <ImageView-->
<!--        android:id="@+id/ivMainMenuIcodn"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:src="@color/orangeLight"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"/>-->

    <TextView
        android:id="@+id/tvNewPostNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivMainMenuIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5"
        android:gravity="center"
        style="@style/S14White2LS"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        android:background="@drawable/round_circle_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>