<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clHList"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/round_rect_white_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivRowIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/common_margin_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_announcement_orange"/>

    <TextView
        android:id="@+id/tvRowTitle"
        style="@style/S18Black2LS"
        tools:text="ABC"
        app:layout_constraintTop_toTopOf="@id/ivRowIcon"
        app:layout_constraintBottom_toTopOf="@id/tvRowDesc"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/common_margin_item"
        android:layout_marginRight="@dimen/common_margin_item"
        app:layout_constraintLeft_toRightOf="@id/ivRowIcon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRowDesc"
        style="@style/S12GrayThree2LS"
        tools:text="Posted 2020.6.25"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tvRowTitle"
        app:layout_constraintBottom_toBottomOf="@id/ivRowIcon"
        app:layout_constraintLeft_toLeftOf="@id/tvRowTitle"
        app:layout_constraintRight_toRightOf="@id/tvRowTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>