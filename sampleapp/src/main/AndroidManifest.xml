<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swc.sampleapp">

    <application
        android:name="com.swc.sampleapp.UserApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_emergency"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.swc.sampleapp.ui.activity.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.swc.sampleapp.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />

</application>

    <uses-permission android:name="android.permission.INTERNET" />
